<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/available_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button"
        android:text="@string/filter_available_button"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/requests_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button"
        android:text="@string/filter_requests_button"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/accepted_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button"
        android:text="@string/filter_accepted_button"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/no_filter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/see_through_button"
        android:text="@string/filter_noFilter_button"
        android:textAllCaps="false"
        android:textColor="#204707"
        android:textColorHint="#0C4A09"
        android:textSize="24sp" />
</LinearLayout>